<h1>New Post from <%= Place.all.where({id: request.query_parameters["place_id"]})[0].name%></h1>
<%= form_with model: @post do |form| %>
<p>
    <%= form.label "Title"%>
    <%= form.text_field "title" %>
</p>
<p>
    <%= form.label "Description"%>
    <%= form.text_field "description" %>
</p>
<p>
    <%= form.label "Date Posted" %>
    <%= form.date_field "posted_on" %>
</p>
<p>
    <%= form.hidden_field :place_id, value: request.query_parameters["place_id"] %>
    <%= form.hidden_field "id" %>
</p>
  <%= form.submit %>
<% end %>