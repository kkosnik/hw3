<h1>Posts From <%= @place.name%></h1>
<ul>
    <% place = Place.all.where({id: @place.id})[0] %>
    <% for posts in place.posts %>
        <h2><%= posts.title %></h2> 
        <h3><%= posts.description%></h3> 
        <p>Posted On: <%= posts.posted_on%></p>
    <% end %>

<p>
    <a href="/posts/new?place_id=<%= @place.id%>"> Create a new post </a>
<p>

<p>
    <a href="/places"> Go back to all places </a>
</p>
